{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", // 必填：把根目录视为模块根
    "paths": {
      "@/*": [
        "./*"
      ] // "@/components/..." → "<repo-root>/components/..."
    }
  }
}