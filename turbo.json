{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "STRIPE_SECRET_KEY",
    "NEXT_PUBLIC_PROP_URL",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_RESERVATION_URL",
    "PROPS_SECRET_JSON",
    "BEDS24_API_KEY",
    "RESEND_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}